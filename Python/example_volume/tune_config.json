{
    "variables": {
        "lbp_radius": {
            "type": "integer",
            "min": 2,
            "max": 32,
            "distribution": "uniform"
        },
        "lbp_scale": {
            "type": "integer",
            "min": 0,
            "max": 4,
            "distribution": "uniform"
        }
    },
    "featuriser": {
        "type": "composite",
        "params": {
            "featuriser_list": [
                {
                    "type": "voxel",
                    "params": {
                    }
                },
                {
                    "type": "histogram",
                    "params": {
                        "radius": {
                            "min": 2,
                            "max": 32,
                            "distribution": "uniform"
                        },
                        "scale": {
                            "min": 0,
                            "max": 4,
                            "distribution": "uniform"
                        },
                        "num_bins": {
                            "min": 2,
                            "max": 32,
                            "distribution": "log2"
                        }
                    }
                },
                {
                    "type": "lbp",
                    "params": {
                        "orientation": "front",
                        "radius": "lbp_radius",
                        "scale": "lbp_scale"
                    }
                },
                {
                    "type": "lbp",
                    "params": {
                        "orientation": "flat",
                        "radius": "lbp_radius",
                        "scale": "lbp_scale"
                    }
                }
            ]
        }
    },
    "classifier": {
        "type": "random_forest",
        "params": {
            "n_estimators": {
                "min": 1,
                "max": 32,
                "distribution": "uniform"
            },
            "max_depth": {
                "min": 1,
                "max": 32,
                "distribution": "uniform"
            },
            "min_samples_leaf": 1
        }
    },
    "training_set": {
        "sample_size_per_label": 20,
        "samples_to_skip_per_label": 0
    },
    "evaluation_set": {
        "sample_size_per_label": 20,
        "samples_to_skip_per_label": 0
    },
    "tuning": {
        "num_iterations": 5
    }
}