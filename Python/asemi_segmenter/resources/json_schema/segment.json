{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "segment.json",
    
    "type": "object",
    "properties": {
        "soft_segmentation": {
            "type": "boolean"
        },
        "as_masks": {
            "type": "boolean"
        },
        "image_extension": {
            "type": "string",
            "enum": ["png", "tiff", "tif"]
        },
        "bits": {
            "type": "integer",
            "enum": [8, 16]
        }
    },
    "required": ["soft_segmentation"],
    "additionalProperties": false
}