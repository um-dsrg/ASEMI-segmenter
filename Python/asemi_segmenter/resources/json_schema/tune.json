{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "train.json",
    "definitions": {
        "evaluation_set": {
            "type": "object",
            "properties": {
                "sample_size_per_label": {
                    "type": "integer",
                    "minimum": -1
                },
                "same_as_train": {
                    "type": "boolean"
                }
            },
            "required": ["sample_size_per_label", "same_as_train"],
            "additionalProperties": false
        }
    },
    
    "type": "object",
    "properties": {
        "featuriser": { "$ref": "featuriser.json#" },
        "classifier": { "$ref": "classifier.json#" },
        "training_set": { "$ref": "train.json#definitions/training_set" },
        "evaluation_set": { "$ref": "#definitions/evaluation_set" },
        "tuning": {
            "type": "object",
            "properties": {
                "num_iterations": {
                    "type": "integer",
                    "minimum": 1
                }
            }
        }
    },
    "required": ["featuriser", "classifier", "training_set", "tuning"],
    "additionalProperties": false
}