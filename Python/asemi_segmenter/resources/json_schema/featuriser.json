{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "featuriser.json",
    "definitions": {

        "voxel": {
            "type": "object",
            "properties": {
                "type": { "const": "voxel" },
                "params": {
                    "type": "object",
                    "minProperties": 0,
                    "maxProperties": 0
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },

        "histogram": {
            "type": "object",
            "properties": {
                "type": { "const": "histogram" },
                "params": {
                    "type": "object",
                    "properties": {
                        "radius": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "scale": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "num_bins": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "use_gpu": {
                            "type": "boolean"
                        }
                    },
                    "required": ["radius", "scale", "num_bins"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },

        "lbp": {
            "type": "object",
            "properties": {
                "type": { "const": "lbp" },
                "params": {
                    "type": "object",
                    "properties": {
                        "orientation": {
                            "type": "string",
                            "enum": [
                                "yz", "right", "sagittal",
                                "xz", "flat", "transverse",
                                "xy", "front", "coronal"
                            ]
                        },
                        "radius": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "scale": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    },
                    "required": ["orientation", "radius", "scale"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },

        "composite": {
            "type": "object",
            "properties": {
                "type": { "const": "composite" },
                "params": {
                    "type": "object",
                    "properties": {
                        "featuriser_list": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    { "$ref": "#/definitions/voxel" },
                                    { "$ref": "#/definitions/histogram" },
                                    { "$ref": "#/definitions/lbp" }
                                ]
                            },
                            "minItems": 1
                        }
                    },
                    "required": ["featuriser_list"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        }

    },

    "oneOf": [
        { "$ref": "#/definitions/voxel" },
        { "$ref": "#/definitions/histogram" },
        { "$ref": "#/definitions/lbp" },
        { "$ref": "#/definitions/composite" }
    ]
}
