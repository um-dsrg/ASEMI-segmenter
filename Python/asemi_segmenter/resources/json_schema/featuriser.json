{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "featuriser.json",
    "definitions": {
        
        "voxel": {
            "type": "object",
            "properties": {
                "type": { "const": "voxel" },
                "params": {
                    "type": "object",
                    "minProperties": 0,
                    "maxProperties": 0
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },
        
        "histogram": {
            "type": "object",
            "properties": {
                "type": { "const": "histogram" },
                "params": {
                    "type": "object",
                    "properties": {
                        "radius": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 1
                                        }
                                    },
                                    "required": ["min", "max"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "scale": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        }
                                    },
                                    "required": ["min", "max"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "num_bins": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 1
                                        }
                                    },
                                    "required": ["min", "max"],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    },
                    "required": ["radius", "scale", "num_bins"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },
        
        "composite": {
            "type": "object",
            "properties": {
                "type": { "const": "composite" },
                "params": {
                    "type": "object",
                    "properties": {
                        "featuriser_list": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    { "$ref": "#/definitions/voxel" },
                                    { "$ref": "#/definitions/histogram" }
                                ]
                            },
                            "minItems": 1
                        }
                    },
                    "required": ["featuriser_list"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        }
        
    },
    
    "oneOf": [
        { "$ref": "#/definitions/voxel" },
        { "$ref": "#/definitions/histogram" },
        { "$ref": "#/definitions/composite" }
    ]
}