{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "classifier.json",
    "definitions": {

        "logistic_regression": {
            "type": "object",
            "properties": {
                "type": { "const": "logistic_regression" },
                "params": {
                    "type": "object",
                    "properties": {
                        "C": {
                            "oneOf": [
                                {
                                    "type": "number",
                                    "exclusiveMinimum": 0.0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "number",
                                            "exclusiveMinimum": 0.0
                                        },
                                        "max": {
                                            "type": "number",
                                            "exclusiveMinimum": 0.0
                                        },
                                        "divisions": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log"]
                                        }
                                    },
                                    "required": ["min", "max", "divisions", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "max_iter": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    },
                    "required": ["C", "max_iter"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },

        "neural_network": {
            "type": "object",
            "properties": {
                "type": { "const": "neural_network" },
                "params": {
                    "type": "object",
                    "properties": {
                        "hidden_layer_sizes": {
                            "type": "array",
                            "items": {
                                "oneOf": [
                                    {
                                        "type": "integer",
                                        "minimum": 1
                                    },
                                    {
                                        "type": "string",
                                        "pattern": "^[a-z_]+$"
                                    },
                                    {
                                        "type": "object",
                                        "properties": {
                                            "min": {
                                                "type": "integer",
                                                "minimum": 1
                                            },
                                            "max": {
                                                "type": "integer",
                                                "minimum": 1
                                            },
                                            "distribution": {
                                                "type": "string",
                                                "enum": ["uniform", "log2"]
                                            }
                                        },
                                        "required": ["min", "max", "distribution"],
                                        "additionalProperties": false
                                    }
                                ]
                            },
                            "minItems": 1
                        },
                        "alpha": {
                            "oneOf": [
                                {
                                    "type": "number",
                                    "exclusiveMinimum": 0.0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "number",
                                            "exclusiveMinimum": 0.0
                                        },
                                        "max": {
                                            "type": "number",
                                            "exclusiveMinimum": 0.0
                                        },
                                        "divisions": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log"]
                                        }
                                    },
                                    "required": ["min", "max", "divisions", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "batch_size": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "max_iter": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 1
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    },
                    "required": ["hidden_layer_sizes", "alpha", "batch_size", "max_iter"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },

        "decision_tree": {
            "type": "object",
            "properties": {
                "type": { "const": "decision_tree" },
                "params": {
                    "type": "object",
                    "properties": {
                        "max_depth": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "min_samples_leaf": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    },
                    "required": ["max_depth", "min_samples_leaf"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        },

        "random_forest": {
            "type": "object",
            "properties": {
                "type": { "const": "random_forest" },
                "params": {
                    "type": "object",
                    "properties": {
                        "n_estimators": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "max_depth": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        },
                        "min_samples_leaf": {
                            "oneOf": [
                                {
                                    "type": "integer",
                                    "minimum": 0
                                },
                                {
                                    "type": "string",
                                    "pattern": "^[a-z_]+$"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "distribution": {
                                            "type": "string",
                                            "enum": ["uniform", "log2"]
                                        }
                                    },
                                    "required": ["min", "max", "distribution"],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    },
                    "required": ["n_estimators", "max_depth", "min_samples_leaf"],
                    "additionalProperties": false
                }
            },
            "required": ["type", "params"],
            "additionalProperties": false
        }

    },

    "oneOf": [
        { "$ref": "#/definitions/logistic_regression" },
        { "$ref": "#/definitions/neural_network" },
        { "$ref": "#/definitions/decision_tree" },
        { "$ref": "#/definitions/random_forest" }
    ]
}